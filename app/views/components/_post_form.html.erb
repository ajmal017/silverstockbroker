<%= form_for(@postNew) do |f| %>

  <div class="form-inputs">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>


  <div class="form-inputs">
    <%= f.label :content %>
    <%= f.cktext_area :content %>
  </div>

  <%= f.label :category %>
  <%= f.select(:category, options_for_select([['Commentary', 'commentary'], ['News', 'news'], ['Backtest', 'backtest']]))%>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
