
<%= simple_form_for(@commentaryNew) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "m-b-md" %>
  </div>
<% end %>
