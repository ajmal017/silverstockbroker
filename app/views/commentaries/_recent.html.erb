<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commentaries.each do |commentary| %>
      <tr>
        <td><%= commentary.title %></td>
        <td><%= raw(commentary.body).truncate(358) %></td>
        <td><%= link_to 'Show', commentary %></td>
        <td><%= link_to 'Edit', edit_commentary_path(commentary) %></td>
        <td><%= link_to 'Delete', commentary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
